<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <display-name>mwthr</display-name>
    
    <listener>
        <listener-class>com.mwthr.gae.CacheContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>LocatorFilter</filter-name>
        <filter-class>com.mwthr.web.LocatorFilter</filter-class>
    </filter>

    <filter>
        <filter-name>WeatherFilter</filter-name>
        <filter-class>com.mwthr.web.WeatherFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LocatorFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter-mapping>
        <filter-name>WeatherFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

</web-app>
